<% include header %>
<style type="text/css">
body {
  background-image:url(/img/background.jpg);
  background-size:105%;
}
.main{
  float:left;
  background-color:#CCCCCC;
  filter:alpha(opacity=60);
  opacity:0.6;
  padding:10px;
  margin-left:10%;
  margin-top:100px;
}
.message{
  margin-top:5px;
  margin-bottom:5px;
  background-color:#FFFFFF;
  width:800px;
  height:200px;
  opacity:1;
}
.more{
  text-align:right;
  color:#FFFFFF;
  background-color:#000000;
  height:50px;
}
.sidebar{
  float:right;
  margin-right:10%;
  margin-top:5%;
}
.img{
  -moz-border-radius: 70px;
  -webkit-border-radius: 70px;
  border-radius: 70px;
  text-align:center;
}
.button{
  color:#FFFFFF;
  text-align:center;
  border:2px solid #000000;
  padding:10px 40px;
  background:#000000;
  width:350px;
  border-radius:25px;
}
.friends{
  margin-top:20px;
  text-align:center;
  border:2px solid #000000;
  background:#000000;
  filter:alpha(opacity=60);
  opacity:0.6;
  height:400px;
  width:400px;
  padding:10px;
  border-radius:25px;
}
.friendtitle{
  color:#FFFFFF;
  border:2px solid #FFFFFF;
  background:#000000;
  opacity:1.0;
  height:auto;
  width:350px;
  border-radius:5px;
}
</style>
  <div style="display: none;">
    <link href="/css/edit.css" rel="stylesheet" type="text/css" />
    <div class="title">
      <p>发布帖子</p>
    </div>
    <div class="subject">
      <input type="text" name="subject" placeholder="输入主题......"/>
    </div>
    <div class="content">
      <p><span><input type="image" src="/img/gragh.jpg" />图片</span>
  	  <span><select name="school" class="select">
  	    <option>下沙</option>
  	    <option>桐乡</option>
  		  <option>不限</option>
  		</select></span>
  	  </p>
  	  <p><textarea name="content"></textarea></p>
  	  <p><input type="submit" value="发表"/></p>
    </div>
  </div>
  <div class="main">
    <% for (var i = 0; i < posts.length; ++i) { %>
    <% post = posts[i]; %>
    <div class="message">
      <table  frame="box" class="message-box">
        <tr><td><h1><%= post.title %></h1></td><td><h2><%= post.address %></h2></td><td><h2><% post.author.username %></h2></td></tr>
        <tr><td><p style="font-size: 120%;"><%= post.content %></p></td></tr>
        <tr><td>已有导师</td><td>已有伙伴</td></tr>
      </table>
    </div>
    <% } %>
    <div class="more">
      <table frame="box">
        <a href="#">......</a>更多
      </table>
    </div>
  </div>
  <div class="sidebar">
    <div class="img">
      <img class="avatar-sm" src="/img/id.jpg" />
      <p><%= user.username %></p>
      <button type="button" class="button">我要发帖</button>
    </div>
    <div class="friends">
      <table>
        <tr><th></th><td><div class="friendtitle">良师益友</div></td></tr>
        <tr><th>1</th><td></td></tr>
        <tr><th>2</th><td></td></tr>
        <tr><th>3</th><td></td></tr>
        <tr><th></th><td><a href="#">更多</a></td></tr>
      </table>
    </div>
  </div>
<% include footer %>
